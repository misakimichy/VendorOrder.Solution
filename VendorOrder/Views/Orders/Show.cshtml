@{
  Layout = "_Layout";
}

<h1>Order Details: </h1>

<h2>@Model["order"].Title</h2>
<ul>
  <li>Description: @Model["order"].Description</li>
  <li>Price: @Model["order"].Price</li>
  <li>Order Date: @Model["order"].OrderDate.Date</li>
</ul>
<h3>Vendor: @Model["vendor"].Name</h3>

<a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order</a>
<a href='/vendors'>View all vendors</a>
